@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmación de Correo";
}

<h1>@ViewData["Title"]</h1>
<br />
<br />
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<h5>
            Hemos enviado un correo a la cuenta registrada para que primero la validez y asi puedas iniciar sesión.
            <a href="https://www.google.com/intl/es-419/gmail/about/">Pulsar para ir a Gmail</a>
</h5>
    }
    else
    {
<h5>
        Please check your email to confirm your account.
</h5>
    }
}

